<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight"
    tools:context=".tablet.TabletMainActivity">

    <android.support.constraint.Guideline
        android:id="@+id/ver_left_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorFab"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.30" />

    <android.support.constraint.Guideline
        android:id="@+id/ver_right_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.60" />

    <TextView
        android:id="@+id/tablet_users_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:drawableStart="@drawable/ic_home_green_30dp"
        android:text="@string/app_name"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tablet_users_frame"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/tablet_users_frame"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="0.5dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ver_left_guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tablet_users_title">

        <fragment
            android:id="@+id/tablet_users_fragment"
            android:name="com.gmail.krbashianrafael.medpunkt.tablet.TabletUsersFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <FrameLayout
            android:id="@+id/tablet_users_blur"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="24dp"
            android:alpha="0.85" />

    </FrameLayout>

    <TextView
        android:id="@+id/tablet_diseases_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorPrimaryDark"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:maxLines="1"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/tablet_users_title"
        app:layout_constraintEnd_toStartOf="@+id/tablet_treatment_frame"
        app:layout_constraintStart_toEndOf="@+id/tablet_users_frame"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/tablet_diseases_frame"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="0.5dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="0.5dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ver_right_guideline"
        app:layout_constraintStart_toEndOf="@+id/ver_left_guideline"
        app:layout_constraintTop_toBottomOf="@+id/tablet_diseases_title">

        <fragment
            android:id="@+id/tablet_diseases_fragment"
            android:name="com.gmail.krbashianrafael.medpunkt.tablet.TabletDiseasesFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/tablet_diseases_blur"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="0.5dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="0.5dp"
        android:layout_marginBottom="1dp"
        android:alpha="0.85"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ver_right_guideline"
        app:layout_constraintStart_toEndOf="@+id/ver_left_guideline"
        app:layout_constraintTop_toBottomOf="@+id/tablet_diseases_title" />

    <TextView
        android:id="@+id/tablet_treatment_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorPrimaryDark"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:maxLines="1"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/tablet_diseases_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tablet_treatment_frame"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/tablet_treatment_cancel_or_save"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="1dp"
        android:background="@color/white"
        android:baselineAligned="false"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/tablet_diseases_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tablet_treatment_frame"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tablet_treatment_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tablet_cancel"
                android:textColor="@color/colorPrimaryLight"
                android:textSize="20sp"
                tools:visibility="visible" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tablet_treatment_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="@string/tablet_save"
                android:textColor="@color/colorPrimaryLight"
                android:textSize="20sp"
                tools:visibility="visible" />
        </FrameLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/tablet_treatment_frame"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toTopOf="@+id/tablet_treatment_delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/ver_right_guideline"
        app:layout_constraintTop_toBottomOf="@+id/tablet_treatment_title">

        <fragment
            android:id="@+id/tablet_treatment_fragment"
            android:name="com.gmail.krbashianrafael.medpunkt.tablet.TabletTreatmentFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <FrameLayout
            android:id="@+id/tablet_treatment_blur"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:alpha="0.85" />

    </FrameLayout>

    <TextView
        android:id="@+id/tablet_treatment_delete"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="@string/tablet_delete_disease"
        android:textColor="@color/my_red"
        android:textSize="20sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tablet_treatment_frame"
        tools:visibility="visible" />

</android.support.constraint.ConstraintLayout>
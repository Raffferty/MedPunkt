<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/usersLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gmail.krbashianrafael.medpunkt.UsersActivity">

    <FrameLayout
        android:id="@+id/divider_frame_green"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorDivider" />

    <FrameLayout
        android:id="@+id/divider_frame_blue"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/divider_frame_green"
        android:background="@color/colorPrimaryDark" />

    <!-- начало Фиктивный юзер -->

    <LinearLayout android:id="@+id/recicler_view_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

            <ImageView
                android:id="@+id/user_image"
                android:layout_marginTop="6dp"
                android:layout_marginStart="4dp"
                android:layout_marginBottom="4dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_camera_alt_gray_24dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:text="Вася"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/txt_user_birth_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:text="11.03.1968"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@color/colorPrimaryDark" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="1dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="4dp"
            android:layout_height="match_parent"
            android:background="@color/colorAccent">
        </FrameLayout>

        <FrameLayout
            android:id="@+id/user_item_edit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="8dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_border_color_blue_24dp" />

        </FrameLayout>

        <TextView
            android:id="@+id/_id"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"/>
    </LinearLayout>

    <!-- конец Фиктивный юзер -->


    <FrameLayout
        android:id="@+id/divider_frame_blue2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/recicler_view_item"
        android:background="@color/colorAccent" />


    <TextView
        android:id="@+id/txt_empty_users"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="16dp"
        android:drawableBottom="@drawable/ic_add_circle_gray_64dp"
        android:gravity="center"
        android:text="@string/empty_users_text"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textColor="@android:color/darker_gray"
        android:visibility="invisible"
        tools:visibility="visible" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/usersRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider_frame_blue2"
        android:layout_margin="8dp" />
</RelativeLayout>

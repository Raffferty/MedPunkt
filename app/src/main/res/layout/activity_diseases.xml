<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gmail.krbashianrafael.medpunkt.DiseasesActivity">

    <FrameLayout
        android:id="@+id/divider_frame"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorAccentThird">

    </FrameLayout>

    <!-- начало Фиктивная болезнь -->

    <LinearLayout
        android:id="@+id/recycler_diseases_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_below="@+id/txt_diseases">

            <TextView
                android:id="@+id/recycler_diseases_item_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="01.02.2018"
                android:drawableBottom="@drawable/ic_local_hotel_blue_24dp"

                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@color/colorPrimaryDark"/>

            <TextView
                android:id="@+id/recycler_diseases_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="16dp"
                android:text="Грипп"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColor="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/disease_item_id"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />
    </LinearLayout>

    <!-- конец Фиктивная болезнь -->

    <!-- этот фрейм убрать -->
    <FrameLayout
        android:id="@+id/divider_frame_blue2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/recycler_diseases_item"
        android:background="#c7c7c7" />

    <TextView
        android:id="@+id/txt_diseases"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider_frame"
        android:background="@color/colorPrimary"
        android:gravity="center_horizontal"
        android:text="@string/txt_what_diseases"
        android:textAppearance="@style/Widget.AppCompat.Toolbar"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txt_empty_diseases"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="16dp"
        android:drawableBottom="@drawable/ic_add_circle_orange_80dp"
        android:gravity="center"
        android:text="@string/empty_diseases_text"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textColor="@android:color/darker_gray"
        android:visibility="invisible"
        tools:visibility="visible"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider_frame_blue2"
        android:layout_margin="8dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabAddDisease"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/ic_add_white_64dp"
        app:backgroundTint="@color/colorFab"/>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/userInfoLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gmail.krbashianrafael.medpunkt.old_UserActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/txt_when_and_what_diseases_add"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/border"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:padding="8dp">

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:textAppearance="@style/Base.TextAppearance.AppCompat"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edit_name"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:textAppearance="@style/Base.TextAppearance.AppCompat"
            android:textColor="@color/colorAccent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_name" />

        <TextView
            android:id="@+id/text_birthdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date_of_birth"
            android:textAppearance="@style/Base.TextAppearance.AppCompat"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_name" />

        <TextView
            android:id="@+id/txt_date"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/choose_date"
            android:textAppearance="@style/Base.TextAppearance.AppCompat"
            android:textColor="@color/colorAccent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_birthdate" />

        <TextView
            android:id="@+id/textUserSaveOrEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="8dp"
            android:text="@string/user_save"
            android:textAppearance="@style/Base.TextAppearance.AppCompat"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="@+id/txt_when_and_what_diseases"
            app:layout_constraintEnd_toStartOf="@+id/fabUserSaveOrEdit"
            app:layout_constraintTop_toBottomOf="@+id/txt_date" />

        <ImageButton
            android:id="@+id/imageButtonCalendarBirthdate"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/calendar40x40px"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_date" />

        <TextView
            android:id="@+id/txt_when_and_what_diseases"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@drawable/border"
            android:gravity="center_horizontal"
            android:text="@string/when_and_what_diseases"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageButtonCalendarBirthdate" />

        <TextView
            android:id="@+id/txt_empty_diseases"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:gravity="center"
            android:text="@string/empty_diseases_text"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="@android:color/darker_gray"
            app:layout_constraintBottom_toBottomOf="@+id/whenAndWhatdiseaseesRecyclerView"
            app:layout_constraintEnd_toEndOf="@+id/whenAndWhatdiseaseesRecyclerView"
            app:layout_constraintStart_toStartOf="@+id/whenAndWhatdiseaseesRecyclerView"
            app:layout_constraintTop_toTopOf="@+id/whenAndWhatdiseaseesRecyclerView" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/whenAndWhatdiseaseesRecyclerView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_when_and_what_diseases" />

        <RelativeLayout
            android:id="@+id/relativeLayoutPhoto"
            android:layout_width="112dp"
            android:layout_height="112dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/border"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textNoPhoto"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/no_photo"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="#6b6b6b"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imagePhoto"
                android:layout_width="112dp"
                android:layout_height="112dp"
                android:padding="2dp"
                android:src="@drawable/blank" />

        </RelativeLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabUserSaveOrEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_accept"
            app:backgroundTint="@color/colorAccent"
            app:layout_constraintBottom_toBottomOf="@+id/txt_when_and_what_diseases"
            app:layout_constraintEnd_toEndOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/txt_when_and_what_diseases_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_toStartOf="@+id/fabAddDiseases"
        android:text="@string/when_and_what"
        android:visibility="invisible"
        tools:visibility="visible" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabAddDiseases"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/ic_add_white_36dp"
        android:visibility="invisible"
        app:backgroundTint="@color/colorAccent"
        tools:visibility="visible" />

</RelativeLayout>

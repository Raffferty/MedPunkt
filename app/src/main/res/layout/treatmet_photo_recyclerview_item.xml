<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recycler_treatment_photo_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shadow"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/photo_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:drawableBottom="@drawable/ic_camera_alt_blue_24dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:textColor="@color/colorPrimaryDark"
        tools:text="01.02.2018" />

    <TextView
        android:id="@+id/recycler_photo_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textColor="@color/colorAccent"
        tools:text="Рентген" />

    <TextView
        android:id="@+id/tr_photo_id"
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <TextView
        android:id="@+id/user_id"
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <TextView
        android:id="@+id/disease_id"
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <TextView
        android:id="@+id/recycler_photo_item_uri"
        android:layout_width="0dp"
        android:layout_height="0dp" />

</LinearLayout>




